
<div class="main-body">
    <div class="col-lg-12">
        <div class="index-cursos">
            <h3 id="tables">Cursos</h3>
            <div><a href="/curso/create" type="button" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i></a></div>
        </div>

        <div class="bs-component">
            <table class="table table-hover">
                <thead>
                    <tr>
                    <th class="campo-id">ID</th>
                    <th>Nome</th>
                    <th class="campo-opcoes">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cursos}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{nome}}</td>
                        <td class="campo-opcoes"> 
                            <a href="/curso/{{id}}"><i class="fa-solid fa-eye"></i></a>
                            <a href="/curso/{{id}}"><i class="fa-solid fa-pen"></i></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table> 
        </div>
        <a class="btn btn-primary" href="/" role="button">Voltar</a>
    </div>
</div>